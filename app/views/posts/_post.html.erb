<div id="<%= dom_id post %>" class="w-full border-2 border-gray-100 rounded-lg shadow-md px-4 py-2 mb-4">
  <%= link_to users_show_path(post.user) do %>
    <div class="w-10/12 flex flex-row space-x-2 ">
      <%= image_tag user_avatar(post.user), alt: post.user.username, width: '50px', class: 'rounded-full object-cover' %>
      <div class="flex flex-col text-sm font-semibold">
        <%= post.user.username %> <br>
        <span class="text-gray-400"><%= time_ago_in_words(post.created_at) %></span>
      </div>
    </div>
  <% end %>

  <%= link_to post_path(post) do %>
    <div class="font-sans px-4 py-2 mt-4 bg-gray-50 border-l-2 border-blue-400">
      <div>
        <%= raw(post.content) %>
      </div>
    </div>
  <% end %>

  <div class="flex flex-row space-x-2 mt-2">
    <div class="flex flex-col justify-center align-middle">
      <button class="flex justify-center align-middle rounded-full p-2 hover:bg-gray-100">
        <i class="fa-regular fa-heart" ></i><!-- colocar verificação pra se o user tiver dado like mudar para solid vermelha -->
      </button>
      <span class="text-sm text-center">0</span>
    </div>

    <div class="flex flex-col justify-center align-middle">
      <button class="flex justify-center align-middle rounded-full p-2 hover:bg-gray-100">
        <i class="fa-regular fa-comment"></i>
      </button>
      <span class="text-sm text-center">0</span>
    </div>

    <div>
      <%= link_to edit_post_path(post), class: 'flex justify-center align-middle rounded-full p-2 hover:bg-gray-100' do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
    </div>
    
    <div>
      <%= button_to post_path(post), method: :delete, class: 'flex justify-center align-middle rounded-full p-2 hover:bg-gray-100' do %>
        <i class="fa-solid fa-trash" style="color: #de1212;" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
</div>
