<div class="mx-auto sm:w-3/4  flex flex-col -mt-8">
  <div class="w-full mb-10 flex justify-between">
    <%= link_to root_path, class: 'block' do %>
      <i class="fa-solid fa-arrow-left"></i> home
    <% end %>
    <h3 class="text-2xl font-semibold"><%= @user.name %>'s posts</h3>
    <div></div>
  </div>
  <div class="flex flex-col mx-auto sm:w-2/3">
    <% if @posts.size > 0 %>
      <% @posts.each do |post| %>
        <%= render post %>
        <br>
      <% end %>
    <% elsif current_user == current_user %>
      <h2 class="text-xl font-semibold">You don't post anyting yet!</h2>
      <%= link_to 'make your first post!', new_post_path %>
    <% else %>
      <h2 class="text-xl font-semibold"><%= @user.name %> doesnt post yet!</h2>
    <% end %>
  </div>
</div>
