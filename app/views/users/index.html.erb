<div class="mx-auto w-3/4  flex flex-col -mt-8">
  <div class="w-full mb-6">
    <%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left"></i> home
    <% end %>
  </div>
  <div class="w-2/3 mx-auto">
    <h2 class="text-xl font-semibold">All Users</h2>
    <hr>
    <% @users.each do |user| %>
      <div class="p-2">
        <%= render user %>
      </div>
      <hr>
    <% end %>
  </div>
</div>
